<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelpList.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Model="using:HelpList.Model"
    x:Class="HelpList.View.HomePageTeacher"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <Model:ClassCollection/>
    </Page.DataContext>




    <Grid>
        <!-- Menu -->
        <StackPanel
            Width="70"
            HorizontalAlignment="Left"
            Background="DarkBlue">
            <AppBarButton
                Foreground="White"
                Icon="Home"
                Label="Home" />
            <AppBarButton
                Foreground="White"
                Icon="List"
                Label="HelpList" />
            <AppBarButton
                Foreground="White"
                Icon="Contact"
                Label="Classes" />
            <AppBarButton
                Foreground="White"
                Icon="Message"
                Label="comment" />
            <AppBarButton
                Foreground="White"
                Icon="Folder"
                Label="Saved Problems" >
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="Click">
                        <Core:NavigateToPageAction TargetPage="HelpList.View.ProblemFolder"/>
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
            </AppBarButton>

        </StackPanel>
        <!-- ../ Menu slut -->

        <!-- Overskrift -->
        <TextBlock 
            HorizontalAlignment="Center" 
            FontSize="72" Text="HelpList" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Margin="0,0,0,0"/>

        <!-- Choose your class for today -->
        <Grid Width="500"  Margin="299,100,225,130">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="67*"/>
                <RowDefinition Height="73*"/>
                <RowDefinition Height="65*"/>
                <RowDefinition Height="35*"/>
            </Grid.RowDefinitions>

            <!--#region Choose Your CLass-->
            <TextBlock 
                HorizontalAlignment="Left" 
                FontSize="20" 
                Text="Vælg din klasse:" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Grid.Column="0"
                Grid.Row="0" Height="27" Width="140"/>

            
            <ListView HorizontalAlignment="Center" 
                      Grid.ColumnSpan="3"
                      Grid.Row="1"
                      Grid.RowSpan="4"
                      ItemsSource="{Binding CC, Mode=TwoWay}"
                      SelectedItem="{Binding SelectedClass, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                      Margin="10,0"
                      Width="480"
                      Height="306"
                      VerticalAlignment="Top"
                      SelectionMode="Single"
                      IsSwipeEnabled="True">


                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!--#endregion-->

            <!--#region Saved-->
            <TextBlock 
                HorizontalAlignment="Left" 
                FontSize="20" 
                Foreground="Black"
                Text="Her er dine gemte opgaver:" 
                TextWrapping="Wrap" 
                VerticalAlignment="Center" 
                Grid.Column="0"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Margin="0,0,0,20" Height="27" Width="243"/>
            <!--#endregion-->
        </Grid>
        <Grid Margin="299,510,225,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Button
                    Width="138"
                    Height="62"
                    Margin="10,10,-145.6,-41.6"
                    Background="DarkBlue"
                    Content="Gemte opgaver"
                    Foreground="White"
                    FontSize="17"
                    >
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="Click">
                        <Core:NavigateToPageAction TargetPage="HelpList.View.ProblemFolder"/>
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>







            </Button>
        </Grid>

    </Grid>
</Page>

