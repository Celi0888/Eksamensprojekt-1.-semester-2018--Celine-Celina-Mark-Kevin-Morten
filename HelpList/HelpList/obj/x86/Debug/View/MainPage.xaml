<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HelpList.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="HelpList.MainPage"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid RenderTransformOrigin="0.496,0.387">
        <Grid>
            <StackPanel
            Width="70"
            HorizontalAlignment="Left"
            Background="DarkBlue">

            </StackPanel>
            <!-- Logo -->
            <TextBlock HorizontalAlignment="Center" FontSize="72" Text="HelpList" TextWrapping="Wrap" VerticalAlignment="Top" Margin="385,16,384,0"/>
            <!-- Overskrift -->
            <TextBlock HorizontalAlignment="Center" FontSize="42" Text="Login" TextWrapping="Wrap" VerticalAlignment="Top" Margin="453,136,442,0" Width="129"/>

            <Grid
                Grid.Column="0" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" Margin="360,273,358,43">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="167*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="19*"/>
                </Grid.ColumnDefinitions>


                <RelativePanel Margin="30,-73,-19.6,73" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="PointerPressed">
                            <Core:NavigateToPageAction/>
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                    <TextBox x:ConnectionId='1'
                        x:Name="Email"
                        Width="250"
                        Header="Email:"
                        Text="Indtast din skole email her..." />

                    <PasswordBox x:ConnectionId='2' 
                        x:Name="Code"
                        Width="250"
                        Header="Adgangskode:"
                        RelativePanel.Below="Email"
                        Margin="0,30,0,0"
                        />

                    <Button x:ConnectionId='3'
                        x:Name="LoginStudent"
                        Width="230"
                        Height="34"
                        Margin="10,20,0,0"
                        Background="DarkBlue"
                        Content="Log ind som Studerende"
                        Foreground="White"
                        RelativePanel.Below="Code" >
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Core:NavigateToPageAction TargetPage="HelpList.View.HomePageStudent"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </Button>
                    <Button x:ConnectionId='4'
                        x:Name="LoginTeacher"
                        Width="230"
                        Height="34"
                        Margin="10,20,0,0"
                        Background="DarkRed"
                        Content="Log ind som Lærer"
                        Foreground="White"
                        RelativePanel.Below="LoginStudent" >
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Core:NavigateToPageAction TargetPage="HelpList.View.HomePageTeacher"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </Button>

                    <Button
                        Width="230"
                        Height="34"
                        Margin="10,20,0,0"
                        Background="White"
                        Content="Log ind som Admin"
                        Foreground="gray"
                        RelativePanel.Below="LoginTeacher" >
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Core:NavigateToPageAction TargetPage="HelpList.View.HomePageAdmin"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </Button>

                </RelativePanel>
            </Grid>
        </Grid>
    </Grid>
</Page>

