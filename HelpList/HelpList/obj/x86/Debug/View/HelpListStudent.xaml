<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelpList.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:HelpList.ViewModel"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="HelpList.View.HelpListStudent"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <ViewModel:ProblemCollector/>
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <StackPanel
            Width="70"
            HorizontalAlignment="Left"
            Background="DarkBlue"
            Grid.RowSpan="2"
            Grid.Column="0">
            <AppBarButton
                Foreground="White"
                Icon="Home"
                Label="Home" />
            <AppBarButton
                Foreground="White"
                Icon="List"
                Label="HelpList" />
            <AppBarButton
                Foreground="White"
                Icon="Contact"
                Label="Classes" />
            <AppBarButton
                Foreground="White"
                Icon="Message"
                Label="comment" />
        </StackPanel>

        <TextBlock x:ConnectionId='1'
            x:Name="Title"
            Grid.ColumnSpan="4"
            Grid.Row="0"
            Text="HelpList"
            HorizontalAlignment="Center"
            FontSize="48"/>

        <Grid Grid.Row="1" Grid.Column="1" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock x:ConnectionId='13'
                    x:Name="NameTextBlock"
                    Text="Name"/>

                <TextBox x:ConnectionId='14'
                    x:Name="NameTextBox"
                    TextWrapping="Wrap"
                    Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <TextBlock x:ConnectionId='11'
                    x:Name="LocationTextBlock"
                     Text="Location"/>

                <TextBox x:ConnectionId='12'
                    x:Name="LocationTextBox"
                    TextWrapping="Wrap"
                    Text="{Binding Location, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <TextBlock x:ConnectionId='9'
                    x:Name="TopicTextBlock"
                    Text="Topic"/>

                <TextBox x:ConnectionId='10'
                    x:Name="TopicTextBox"
                    TextWrapping="Wrap"
                    Text="{Binding Topic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Grid.Row="3">
                <TextBlock x:ConnectionId='7'
                    x:Name="DescriptionTextBlock"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"
                    Text="Description"/>

                <TextBox x:ConnectionId='8'
                    x:Name="DescriptionTextBox"
                    MinHeight="143"
                    TextWrapping="Wrap"
                    Text="{Binding Description, Mode=TwoWay}"/>
            </StackPanel>

            <Button x:ConnectionId='6' 
                x:Name="AddProblem"
                Grid.Row="4"
                MinHeight="40"
                MinWidth="134"
                Margin="0,-30,0,20"
                HorizontalAlignment="Right"
                Content="Add Problem"
                Command="{Binding AddCommand}">
            </Button>

        </Grid>

        <Grid Grid.Row="1" Grid.Column="2" Margin="10,0,10,0">
            <ListView x:ConnectionId='5'
                x:Name="HelpListView"
                ItemsSource="{Binding Problems}"
                SelectedItem="{Binding SelectedProblem, Mode=TwoWay}"
                                                                  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="{Binding Date, Mode=OneWay}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Vertical" Margin="0,0,8,0">
                                    <TextBlock Text="Name:" TextWrapping="Wrap"/>
                                    <TextBlock Text="Topic:" TextWrapping="Wrap"/>
                                    <TextBlock Text="Location:" TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name, Mode=OneWay}"/>
                                    <TextBlock Text="{Binding Topic, Mode=OneWay}"/>
                                    <TextBlock Text="{Binding Location, Mode=OneWay}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Column="3" Grid.Row="1" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="113*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <StackPanel x:ConnectionId='2'
                Grid.Row="0"
                x:Name="HelpListExtendedView" Grid.ColumnSpan="3" Margin="0,0,-0.4,0"
                >
                <TextBlock x:ConnectionId='3' 
                    x:Name="DateBlock"
                    Text="{Binding SelectedProblem.Date}"
                    HorizontalAlignment="Right"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="Name:"/>
                        <TextBlock Text="Location:"/>
                        <TextBlock Text="Topic:"/>
                        <TextBlock Text="Description:"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="{Binding SelectedProblem.Name}"/>
                        <TextBlock Text="{Binding SelectedProblem.Location}"/>
                        <TextBlock Text="{Binding SelectedProblem.Topic}"/>
                        <TextBlock
                            Text="{Binding SelectedProblem.Description}"
                            MinHeight="100"
                            TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel>
                    <Button x:ConnectionId='4' 
                        x:Name="RemoveProblem"
                        Grid.Row="4"
                        MinHeight="40"
                        MinWidth="50"
                        Margin="0,20,10,0"
                        HorizontalAlignment="Right"
                        Content="Remove"
                        Command="{Binding RemoveCommand}">
                    </Button>
                </StackPanel>
            </StackPanel>


        </Grid>

    </Grid>
</Page>

