<Page
    x:Class="HelpList.View.PivotCreateStudent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Model="using:HelpList.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HelpList.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.DataContext>
        <Model:StudentCollection />
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" HorizontalAlignment="Center">

            <RelativePanel>
                <TextBox x:ConnectionId='1'
                    x:Name="firstname"
                    Width="200"
                    Header="Firstname"
                    Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox x:ConnectionId='2'
                    x:Name="Lastname"
                    Width="200"
                    Header="Lastname"
                    RelativePanel.Below="firstname"
                    Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox x:ConnectionId='3'
                    x:Name="mail"
                    Width="200"
                    Header="Email"
                    RelativePanel.Below="Lastname"
                    Text="{Binding Mail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox x:ConnectionId='4'
                    x:Name="username"
                    Width="200"
                    Header="Username"
                    RelativePanel.Below="mail"
                    Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox x:ConnectionId='5'
                    x:Name="password"
                    Width="200"
                    Header="Password"
                    RelativePanel.Below="username"
                    Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Button x:ConnectionId='6'
                    x:Name="add"
                    Width="80"
                    Height="34"
                    Margin="10"
                    Background="DarkBlue"
                    Command="{Binding AddCommand, Mode=TwoWay}"
                    Content="Create"
                    Foreground="White"
                    RelativePanel.Below="password" />
                <Button
                    Width="80"
                    Height="34"
                    Margin="10"
                    Background="DarkRed"
                    Command="{Binding DeleteCommand, Mode=TwoWay}"
                    Content="Delete"
                    Foreground="White"
                    RelativePanel.Below="password"
                    RelativePanel.RightOf="add" />

            </RelativePanel>
        </Grid>

        <ListView
            Grid.Column="1"
            HorizontalAlignment="Center"
            ItemsSource="{Binding SC, Mode=TwoWay}"
            SelectedItem="{Binding SelectedStudent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <RelativePanel>
                        <TextBlock
                            x:Name="namestudent"
                            FontSize="20"
                            Text="{Binding FirstName, Mode=OneWay}" />

                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="20"
                            RelativePanel.RightOf="namestudent"
                            Text="{Binding LastName, Mode=OneWay}" />

                    </RelativePanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

