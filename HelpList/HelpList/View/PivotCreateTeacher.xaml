<Page
    x:Class="HelpList.View.PivotCreateTeacher"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Model="using:HelpList.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HelpList.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.DataContext>
        <Model:TeacherCollection />
    </Page.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" HorizontalAlignment="Center">

            <RelativePanel
                Grid.Row="0"
                Grid.RowSpan="2"
                Margin="0,50,0,0">
                <TextBox
                    x:Name="firstname"
                    Width="200"
                    FontSize="20"
                    Header="Firstname"
                    Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    x:Name="Lastname"
                    Width="200"
                    Margin="20,0,0,0"
                    FontSize="20"
                    Header="Lastname"
                    RelativePanel.RightOf="firstname"
                    Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


                <TextBox
                    x:Name="mail"
                    Width="200"
                    FontSize="20"
                    Header="Mail"
                    RelativePanel.Below="firstname"
                    Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    x:Name="password"
                    Width="200"
                    Margin="20,0,0,0"
                    FontSize="20"
                    Header="Password"
                    RelativePanel.Below="Lastname"
                    RelativePanel.RightOf="mail"
                    Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <AppBarButton
                    x:Name="AppBarButton1"
                    Margin="0,30,0,0"
                    Command="{Binding AddCommand, Mode=TwoWay}"
                    Foreground="DarkGreen"
                    Icon="Add"
                    RelativePanel.Below="mail" />

                <AppBarButton
                    Margin="0,30,0,0"
                    Command="{Binding DeleteCommand, Mode=TwoWay}"
                    Foreground="DarkRed"
                    Icon="delete"
                    RelativePanel.Below="password"
                    RelativePanel.RightOf="AppBarButton1" />

            </RelativePanel>
        </Grid>

        <TextBlock
            Grid.Column="1"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            FontSize="24"
            Text="Teachers" />

        <ListView
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="0,70,0,0"
            HorizontalAlignment="Center"
            ItemsSource="{Binding TC, Mode=TwoWay}"
            SelectedItem="{Binding SelectedTeacher, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="DarkBlue" BorderThickness="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <RelativePanel Width="240">
                                <TextBlock
                                    x:Name="firstname"
                                    Margin="10,0,0,0"
                                    FontSize="20"
                                    Text="{Binding FirstName, Mode=OneWay}" />
                                <TextBlock
                                    x:Name="lastname"
                                    Margin="5,0,10,0"
                                    FontSize="20"
                                    RelativePanel.RightOf="firstname"
                                    Text="{Binding LastName, Mode=OneWay}" />
                            </RelativePanel>
                        </Grid>

                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
